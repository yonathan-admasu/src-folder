<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("partials/commonhead") %>
  </head>
  <body>    
    <div class="body-container">
      <%- include ("partials/header") %>
      <%- include ("../commonpartials/stbutton") %>
      <div class="page-body">
          <%- include ("partials/sidebar") %>
        <div class="container">
          <div class="row">
            <div class="col-md-6 m-auto">
              <div class="card-body">
                <h1 class="text-center mb-3">
                  <i class="fas fa-user-edit"></i> Edit Profile
                </h1>
                <%- include ("partials/messages") %>
                <form action="/admin/editprofile" method="POST">
                  <div class="form-group with-icon">
                    <label for="fname">First Name</label>
                    <input type="name" id="fname" name="fname" class="form-control filled" value="<%= user.firstName %>" required/>
                    <i class="fas fa-user input-icon"></i>
                  </div>
                  <div class="form-group with-icon">
                    <label for="fname">Last Name</label>
                    <input type="name" id="lname" name="lname" class="form-control filled" value="<%= user.lastName %>" required/>
                    <i class="fas fa-user input-icon"></i>
                  </div>
                  <button type="submit" class="btn rlbtn rlbtn-primary btn-block">
                    Save Changes
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include ("partials/footer") %>
    <%- include ("partials/commonscripts") %>
  </body>
</html>
