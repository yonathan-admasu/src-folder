<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ("partials/commonhead") %>
</head>

<body>
  <%- include ("../commonpartials/stbutton") %>
  <div class="container">
    <div class="row mt-5">
      <div class="col text-center">
        <img src="/images/logo.png" alt="rulings.law - the free, searchable database of California tentative rulings" class="logo-image" title="rulings.law - the free, searchable database of California tentative rulings">
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-md-5 mx-auto">
        <div class="card p-4 bg-light">
          <h4 class="text-center mb-4"><i class="fas fa-sign-in-alt"></i> Admin Login</h4>
          <%- include ("partials/messages") %>
          <form action="/admin/login" method="POST">
            <div class="form-group with-icon">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" required />
              <i class="fas fa-envelope input-icon"></i>
            </div>
            <div class="form-group with-icon">
              <label for="password">Password</label>
              <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
                required />
              <i class="fas fa-lock input-icon"></i>
            </div>
            <button type="submit" class="btn btn-block rlbtn rlbtn-primary mt-3">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>