<!DOCTYPE html>
<html lang="en">
<head>
  <%- include ("../partials/commonhead") %>
</head>
<body>
  <%- include ("../partials/header") %>
  <%- include ("../../commonpartials/stbutton") %>
  <div class="body-container">
    <%- include ("../partials/sidebar") %>
    <div class="page-body">
      <div class="container">
        <div class="row">
          <div class="col">
              <h2 class="home-page-heading">Add Department</h2>
            </div>
          </div>
          <div class="row">
            <div class="col-md-5 mx-auto">
              <h4 class="form-heading">Enter Department Information:</h4>
              
              <%- include ("../partials/messages") %>
              
              <form action="/admin/departments/adddepartment" method="POST">
                <div class="form-group">
                  <label for="">Courthouse <span class="text-danger">*</span></label>
                  <select name="courthouse" id="courthouse" class="form-control" required>
                    <% for (var i = 0; i < courthouses.length; i++) { %>
                      <option value="<%= courthouses[i]._id %>"><%= courthouses[i].name %></option>
                    <% } %>
                  </select>
                </div>
                <div class="form-group">
                  <label for="">Department Name <span class="text-danger">*</span></label>
                  <input type="text" name="name" id="name" class="form-control" required placeholder="eg. W"
                    value = "<%= typeof department != 'undefined' ? department.name : '' %>"
                  >
                </div>
                <div class="form-group">
                  <label for="">Alias</label>
                  <input type="text" name="alias" id="alias" class="form-control" placeholder="eg. SEW"
                    value = ""
                  >
                </div>
                <button type="submit" class="btn btn-success btn-block mt-2">
                  <i class="fas fa-plus-circle    "></i>
                  Add Department
                </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include ("../partials/footer") %>
  <%- include ("../partials/commonscripts") %>
</body>
</html>


