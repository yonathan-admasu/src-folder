<!DOCTYPE html>
<html lang="en">
<head>
  <%- include ("../partials/commonhead") %>
</head>
<body>
  <%- include ("../partials/header") %>
  <%- include ("../../commonpartials/stbutton") %>
  <div class="body-container">
    <%- include ("../partials/sidebar") %>
    <div class="page-body">
        <div class="container">
            <div class="row">
              <div class="col">
                <h2 class="home-page-heading">Judges</h2>
                <%- include ("../partials/messages") %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-3">
                <a href="/admin/judges/addjudge" class="btn btn-primary my-2 main-page-buttons" id="btn-addjudge">
                  <i class="fas fa-plus-circle"></i>
                  Add Judge
                </a>
              </div>
            </div>
            <hr>
            <div class="row">
                <% for (let i = 0; i < judges.length; i++) { %>
                  <div class="col-lg-3 col-md-4 col-sm-6 mb-2">
                    <div class="card">
                      <div class="judgename">
                        <a style="display:block;" href="/admin/judges/rulings/<%= judges[i]._id %>" class="text-dark"><%= i + 1 %> - <%= judges[i].name %></a>
                        <div>
                        <form action="/admin/judges/<%= judges[i]._id %>/delete" method="POST" class="d-inline">
                          <button type="submit" class="text-danger mr-1 dep-delete-btn">
                            <i class="fas fa-trash"></i>
                          </button>
                        </form>
                        <a href="/admin/judges/<%= judges[i]._id %>/editjudge" class="text-primary"><i class="fas fa-edit"></i></a>
                      </div>
                      </div>
                    </div>
                  </div>
                <% } %>        
            </div>
            <div class="row my-3">
              <div class="col text-center">
                <a href="/admin" class="btn btn-success px-5 back-button"><i class="fas fa-arrow-circle-left"></i>&nbsp; Back</a>
              </div>
            </div>
          </div>
          
        </div>
      </div>
      <%- include ("../partials/footer") %>      
      <%- include ("../partials/commonscripts") %>
</body>
</html>

    