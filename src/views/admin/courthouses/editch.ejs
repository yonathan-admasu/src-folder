<!DOCTYPE html>
<html lang="en">
<head>
  <%- include ("../partials/commonhead") %>
</head>
<body>
  <%- include ("../partials/header") %>
  <%- include ("../../commonpartials/stbutton") %>
  <div class="body-container">
    <%- include ("../partials/sidebar") %>
    <div class="page-body">
        <div class="container">
            <div class="row">
              <div class="col">
                  <h2 class="home-page-heading">Edit Courthouse</h2>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4 mx-auto">
                  <h4 class="form-heading">Edit Courthouse Information</h4>
                  <%- include ("../partials/messages") %>
                  <form action="/admin/courthouses/<%= courthouse._id %>/editcourthouse" method="POST">
                    <div class="form-group">
                      <label for="">Name <span class="text-danger">*</span></label>
                      <input type="text" name="name" id="" class="form-control" required value="<%= courthouse.name %>">
                      <span class="small text-success ml-2">Do not write 'Courthouse' after the name</span>
                    </div>
                    <div class="form-group">
                      <label for="">Address</label>
                      <input type="text" name="address" id="" class="form-control" required value="<%= courthouse.address %>">
                    </div>
                    <div class="form-group">
                      <label for="">County</label>
                      <select name="county" id="county" class="form-control" required>
                        <% for (var i = 0; i < counties.length; i++) { %>
                          <option value="<%= counties[i].id %>"><%= counties[i].name %></option>
                        <% } %>
                      </select>
                    </div>
                     <button type="submit" class="btn btn-success btn-block mt-2">
                      <i class="fas fa-save    "></i>
                      Save Changes
                    </button>
                </form>
              </div>
            </div>
          </div>
    </div>
  </div>
  <%- include ("../partials/footer") %>
  <%- include ("../partials/commonscripts") %>
</body>
</html>
