<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ("../commonpartials/commonhead") %>
  <link rel="stylesheet" href="/stylesheets/login.css">
</head>

<body>
  <div class="container welcome-body-container body-container">
    <div class="row">
      <div class="col-md-6 m-auto">
        <h1>
          <a href="/" class="rllink-primary">
            <img src="/images/logo.png" alt="rulings.law - the free, searchable database of California tentative rulings"
              class="welcome-logo" title="rulings.law - the free, searchable database of California tentative rulings">
          </a>
        </h1>
        <div class="card-body">
          <h1 class="text-center mb-3 rltext-primary">
            <i class="fas fa-question-circle    "></i>
            Reset Password
          </h1>
          <%- include ("../commonpartials/messages") %>
          <p class="text-center">Enter new password</p>
          <form action="/users/resetpassword" method="POST">
            <div class="form-group with-icon d-none">
              <label for="password1">token</label>
              <input type="text" id="token" name="token" class="form-control" required value="<%= token %>"/>
              <i class="fas fa-lock input-icon"></i>
            </div>
            <div class="form-group with-icon">
              <label for="password1">New Password</label>
              <input type="password" id="password1" name="password1" class="form-control" required/>
              <i class="fas fa-lock input-icon"></i>
            </div>
            <div class="form-group with-icon">
              <label for="password2">Confirm Password</label>
              <input type="password" id="password2" name="password2" class="form-control" required/>
              <i class="fas fa-lock input-icon"></i>
            </div>
            <button type="submit" class="btn btn-block rlbtn rlbtn-primary">Create Password</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <%- include ("partials/footer") %>
  <%- include ("../commonpartials/commonscripts") %>
</body>

</html>