<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ("../commonpartials/commonhead") %>
  <link rel="stylesheet" href="/stylesheets/login.css">
</head>

<body>
  <div class="container welcome-body-container body-container">
    <div class="row">
      <div class="col-md-6 mx-auto">
        <h1>
          <a href="/" class="rllink-primary">
            <img src="/images/logo.png" alt="rulings.law - the free, searchable database of California tentative rulings"
              class="welcome-logo" title="rulings.law - the free, searchable database of California tentative rulings">
          </a>
        </h1>
        <div class="card-body">
          <h1 class="text-center mb-3 rltext-primary"><i class="fas fa-sign-in-alt"></i> Login</h1>
          <%- include ("../commonpartials/messages") %>
          <form action="/users/login" method="POST">
            <div class="form-group with-icon">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" class="form-control" />
              <i class="fas fa-envelope input-icon"></i>
            </div>
            <div class="form-group with-icon">
              <label for="password">Password</label>
              <input type="password" id="password" name="password" class="form-control"  />
              <i class="fas fa-lock input-icon"></i>
            </div>
            <button type="submit" class="btn btn-block rlbtn rlbtn-primary">Login</button>
          </form>
          <p class="mt-3 mb-0">
            Not Registered? <a href="/users/register" class="rllink-primary">Register</a>
          </p>
          <p class="">
            Forgot Password? <a href="/users/forgotpassword" class="rllink-primary">Click Here</a>
          </p>
        </div>
      </div>
    </div>
  </div>
  <%- include ("partials/footer") %>
  <%- include ("../commonpartials/commonscripts") %>
</body>

</html>