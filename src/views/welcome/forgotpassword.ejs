<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ("../commonpartials/commonhead") %>
  <link rel="stylesheet" href="/stylesheets/login.css">
</head>

<body>
  <div class="container welcome-body-container body-container">
    <div class="row">
      <div class="col-md-6 m-auto">
        <h1>
          <a href="/" class="rllink-primary">
            <img src="/images/logo.png" alt="rulings.law - the free, searchable database of California tentative rulings"
              class="welcome-logo" title="rulings.law - the free, searchable database of California tentative rulings">
          </a>
        </h1>
        <div class="card-body">
          <h1 class="text-center mb-3 rltext-primary">
            <i class="fas fa-question-circle    "></i>
            Forgot Password
          </h1>
          <%- include ("../commonpartials/messages") %>
          <p class="text-center">Enter your Email and we will send you a link to change your password</p>
          <form action="/users/forgotpassword" method="POST">
            <div class="form-group with-icon">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" class="form-control" />
              <i class="fas fa-envelope input-icon"></i>
            </div>
            <button type="submit" class="btn btn-block rlbtn rlbtn-primary">Send Email</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <%- include ("partials/footer") %>
  <%- include ("../commonpartials/commonscripts") %>
</body>

</html>